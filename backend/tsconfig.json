{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                       
    "rootDir": "./src"   ,
    "useDefineForClassFields": false   ,
    "experimentalDecorators": true,                  
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
